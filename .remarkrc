{
  "plugins": {
    "remark-lint": {
      "external": ["remark-lint-sentence-newline"],
      "fenced-code-flag": {
        "allowEmpty": true
      },
      "list-item-indent": "space",
      "maximum-heading-length": false,
      "maximum-line-length": false,
      "no-file-name-irregular-characters": false,
      "no-html": false,
      "sentence-newline": {
        "blacklist": ["e.g.", "E.g.", "etc.", "i.e.", "vs.", "..."]
      },
      "unordered-list-marker-style": "-"
    }
  }
}
